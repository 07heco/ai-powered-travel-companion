<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.user.dao.UserDao">
    
    <!-- 根据手机号查询用户 -->
    <select id="selectByPhone" resultType="com.travel.user.entity.User">
        SELECT * FROM user WHERE phone = #{phone} AND deleted = 0
    </select>
    
    <!-- 根据邮箱查询用户 -->
    <select id="selectByEmail" resultType="com.travel.user.entity.User">
        SELECT * FROM user WHERE email = #{email} AND deleted = 0
    </select>
    
</mapper>